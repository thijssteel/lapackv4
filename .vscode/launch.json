{
   "configurations": [
      {
         "name": "Build and debug the current file",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceRoot}/bin/${fileBasenameNoExtension}",
         "args": [],
         "stopAtEntry": true,
         "cwd": "${workspaceRoot}",
         "environment": [],
         "externalConsole": false,
         "preLaunchTask": "Build active file using GNU make",
         "MIMode": "gdb",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ],
      },
   ],
   "version": "2.0.0"
}